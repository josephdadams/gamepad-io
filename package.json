{
    "name": "gamepad-io",
    "version": "1.0.0",
    "author": "Joseph Adams <joseph@josephadams.dev>",
    "description": "Use gamepads to control your computer",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "format": "prettier -w ."
    },
    "build": {
        "appId": "com.josephadams.gamepad-io",
        "productName": "gamepad-io",
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "public.app-category.utilities",
            "icon": "build/icon.png",
            "identity": "Joseph Adams (R2PY2DC3A4)",
            "extendInfo": {
                "NSApplicationSupportsSecureRestorableState": true,
                "electronTeamId": "R2PY2DC3A4"
            },
            "hardenedRuntime": true,
            "gatekeeperAssess": true,
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/tray-icon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "armv7l",
                        "arm64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "armv7l",
                        "arm64"
                    ]
                }
            ],
            "icon": "assets/tray-icon.png"
        },
        "generateUpdatesFilesForAllChannels": false
    },
    "dependencies": {
        "electron-store": "^8.0.0",
        "express": "^4.19.2",
        "hyperaxe": "^2.0.1",
        "nanochoo": "^6.13.0",
        "short-uuid": "^5.2.0",
        "socket.io": "^4.7.5",
        "style.css": "^1.0.3"
    },
    "devDependencies": {
        "browserify": "^17.0.0",
        "@electron/notarize": "^2.5.0",
        "concurrently": "^8.0.0",
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8",
        "prettier": "^3.3.3"
    }
}

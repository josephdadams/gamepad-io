{
    "name": "gamepad-io",
    "productName": "gamepad-io",
    "version": "0.1.0",
    "description": "Use gamepads to control your computer",
    "license": "MIT",
    "repository": "josephdadams/gamepad-io",
    "author": {
        "name": "Joseph Adams",
        "email": "josephdadams@gmail.com",
        "url": "https://josephadams.dev"
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "format": "prettier -w .",
        "lint": "xo",
        "test": "yarn run lint",
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --mac --linux --arm64 --x64 --win",
		"dist-mac": "electron-builder --mac --arm64 --x64",
		"dist-win": "electron-builder --win --arm64 --x64",
        "dist-linux": "electron-builder --linux --arm64 --x64",
        "release": "np"
    },
    "dependencies": {
        "electron-store": "^8.0.0",
        "express": "^4.19.2",
        "hyperaxe": "^2.0.1",
        "nanochoo": "^6.13.0",
        "short-uuid": "^5.2.0",
        "socket.io": "^4.7.5",
        "style.css": "^1.0.3"
    },
    "devDependencies": {
        "browserify": "^17.0.0",
        "electron": "^31.3.1",
        "electron-builder": "^24.13.3",
        "electron-notarize": "^2.0.0",
        "np": "^7.5.0",
        "prettier": "^3.3.3",
        "xo": "^0.39.1"
    },
    "xo": {
        "envs": ["node", "browser"]
    },
    "np": {
        "publish": false,
        "releaseDraft": false
    },
    "build": {
        "appId": "com.josephadams.gamepad-io",
        "productName": "gamepad-io",
        "mac": {
            "category": "public.app-category.productivity",
            "darkModeSupport": true,
            "target": ["dmg", "zip"],
            "hardenedRuntime": true,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "gatekeeperAssess": false,
            "identity": "Developer ID Application: Your Name (TEAM_ID)"
        },
        "dmg": {
            "iconSize": 160,
            "contents": [
                {
                    "x": 180,
                    "y": 170
                },
                {
                    "x": 480,
                    "y": 170,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": ["AppImage", "deb", "rpm"],
            "category": "Utility"
        },
        "win": {
            "target": ["nsis", "zip"],
            "publisherName": "Joseph Adams"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "assets/",
                "to": "assets/",
                "filter": ["**/*"]
            }
        ],
        "afterSign": "electron-builder-notarize"
    }
}

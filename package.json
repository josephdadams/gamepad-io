{
    "name": "gamepad-io",
    "productName": "gamepad-io",
    "version": "1.0.0",
    "description": "Use gamepads to control your computer",
    "license": "MIT",
    "repository": "josephdadams/gamepad-io",
    "author": {
        "name": "Joseph Adams",
        "email": "joseph@josephadams.dev",
        "url": "https://josephadams.dev"
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "format": "prettier -w .",
        "lint": "xo",
        "test": "yarn run lint",
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --mac --linux --arm64 --x64 --win",
		"dist-mac": "electron-builder --mac --arm64 --x64",
		"dist-win": "electron-builder --win --arm64 --x64",
        "dist-linux": "electron-builder --linux --arm64 --x64",
        "release": "np"
    },
    "dependencies": {
        "electron-store": "^8.0.0",
        "express": "^4.19.2",
        "hyperaxe": "^2.0.1",
        "nanochoo": "^6.13.0",
        "short-uuid": "^5.2.0",
        "socket.io": "^4.7.5",
        "style.css": "^1.0.3"
    },
    "devDependencies": {
        "browserify": "^17.0.0",
        "electron": "^31.3.1",
        "electron-builder": "^24.13.3",
        "electron-notarize": "^2.0.0",
        "np": "^7.5.0",
        "prettier": "^3.3.3",
        "xo": "^0.39.1"
    },
    "build": {
        "appId": "com.josephadams.gamepad-io",
        "productName": "gamepad-io",
        "files": [
            "dist/**/*",
            "public/**/*",
            "assets/**/*"
        ],
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "public.app-category.utilities",
            "icon": "build/icon.png",
			"identity": "Joseph Adams (R2PY2DC3A4)",
            "extendInfo": {
                "NSApplicationSupportsSecureRestorableState": true,
				"electronTeamId": "R2PY2DC3A4"
            },
			"notarize": {
				"teamId": "R2PY2DC3A4"
			},
            "hardenedRuntime": true,
            "gatekeeperAssess": true,
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/tray-icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/tray-icon.png"
        },
        "generateUpdatesFilesForAllChannels": false
    }
}
